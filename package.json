{
  "name": "review-master",
  "version": "0.1.0",
  "description": "A library to visualize business intelligence derived from sentiment analysis on product reviews",
  "author": {
    "name": "Bora Elci",
    "email": "bora.elci@columbia.edu"
  },
  "license": "MIT",
  "repository": "boraelci/review-master",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">= 16 <20"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "react-scripts test --watchAll=false --coverage --env=jsdom",
    "lint": "eslint src --ext .ts --ext .tsx",
    "prettier": "prettier --config .prettierrc --write .",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "@types/chart.js": "^2.9.37",
    "@types/react-chartjs-2": "^2.5.7",
    "react-chartjs-2": "^5.2.0",
    "chart.js": "^4.2.1"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.37",
    "@types/react-chartjs-2": "^2.5.7",
    "react-chartjs-2": "^5.2.0",
    "chart.js": "^4.2.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^16.18.12",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.44",
    "@typescript-eslint/parser": "^5.44",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.28",
    "eslint-config-prettier": "^8.5",
    "eslint-plugin-jest": "^27.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "~4.9",
    "jest": "^29.3",
    "ts-jest": "~29.0"
  },
  "files": [
    "dist"
  ]
}
